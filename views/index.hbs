<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/axios@1.6.7/dist/axios.min.js" integrity="sha256-NDS2dZXGgHGCThQtB3zn4QXUCsQLFRZIltEeVAeNAhM=" crossorigin="anonymous"></script>
<script src="script.js" ></script>

<div class="container" >
  {{#if isAuthenticated}}

    <div class="row mt-3">
      <div class="col">
        <p>Usuario: {{email}}</p>
        <a href="/api/auth/signout">Cerrar sessión</a>
      </div>
    </div>

  {{else}}
    <div class="row mt-3">
      <div class="col">
        <a href="/api/auth/login">Iniciar sessión</a>
      </div>
    </div>
  {{/if}}

  <div class="row mt-3">
    <div class="col">
      <hr />
      <button class="btn btn-primary" id="search-btn">
        Buscar restaurantes
      </button>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col">
      <hr />
      <label for="city" class="form-label">Ciudad</label>
      <input type="text" id="city" class="form-control"> </input>
      <button class="btn btn-primary mt-2" id="search-btn-city">
        Buscar restaurantes 
      </button>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col">
      <hr />
      <label for="tx-type" class="form-label">Tipo</label>
      <input type="text" id="tx-type" class="form-control"> </input>
      <button class="btn btn-primary mt-2" id="search-btn-txs">
        Buscar transacciones 
      </button>
    </div>
  </div>

</div>

